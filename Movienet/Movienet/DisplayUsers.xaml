<Page x:Class="Movienet.DisplayUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Movienet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Source={StaticResource VM_Locator}, Path=VM_DisplayUsers}"
      Title="Display users">
    <Grid>
        <TextBlock x:Name="textBlock" FontSize="32" Text="Display users"  HorizontalAlignment="Left" Margin="45,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="137" Width="219"/>
           <ListBox x:Name="UserListDef" ItemsSource="{Binding UserList}" Height="264" Width="205"/>
        <TextBlock x:Name="Info" HorizontalAlignment="Left" Margin="45,231,0,0" TextWrapping="Wrap" Text="Informations: " VerticalAlignment="Top" Height="186" Width="279"/>

    </Grid>
</Page>
