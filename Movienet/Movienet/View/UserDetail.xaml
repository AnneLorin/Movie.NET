<Page x:Class="Movienet.UserDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Movienet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Source={StaticResource VM_Locator}, Path=VM_DisplayUsers}"
      Title="UserDetail">
    <Grid>
        <ListBox>
            <ListBoxItem Content="{Binding SelectItem.Firstname}"></ListBoxItem>
            <ListBoxItem Content="{Binding SelectItem.Lastname}"></ListBoxItem>
            <ListBoxItem Content="{Binding SelectItem.Login}"></ListBoxItem>
            <ListBoxItem Content="{Binding SelectItem.Password}"></ListBoxItem>
        </ListBox>
        
    </Grid>
</Page>
