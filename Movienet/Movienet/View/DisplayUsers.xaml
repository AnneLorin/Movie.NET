<Page x:Class="Movienet.DisplayUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Movienet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Source={StaticResource VM_Locator}, Path=VM_DisplayUsers}"
      Title="Display users">
    <Grid>
        <TextBlock x:Name="Info" HorizontalAlignment="Left" Margin="45,151,0,0" TextWrapping="Wrap" Text="{Binding Info}" VerticalAlignment="Top" Height="182" Width="211"/>
        <TextBlock x:Name="textBlock" FontSize="32" Text="Display users"  HorizontalAlignment="Left" Margin="45,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="137" Width="219"/>
        <ListBox x:Name="UserListDef" ItemsSource="{Binding Users}" DisplayMemberPath="Firstname" SelectedItem="{Binding SelectItem}" Width="205" Margin="298,51,297,54"/>
        <Frame x:Name="userDetail" Content="{Binding Detail}" NavigationUIVisibility="Hidden" Margin="532,51,0,54"/>
    </Grid>
</Page>
